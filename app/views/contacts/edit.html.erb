<h1>Edit this contact</h1>
  <% if @contact.errors.any? %>
      <div id="error_explanation">
          <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
            <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @contact.first_name, class: "form-control" %>
  </div>
    <div>
    <%= label_tag :middle_name %>
    <%= text_field_tag :middle_name, @contact.middle_name, class: "form-control"  %>
  </div>
   <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @contact.last_name, class: "form-control"  %>
  </div>
   <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, @contact.email, class: "form-control"  %>
  </div>
   <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @contact.phone_number, class: "form-control"  %>
  </div>
  <div>
    <%= submit_tag 'Submit contact' %>
  </div>
<% end %>